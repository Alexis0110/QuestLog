        <tr class="bg-gray-200">
            <th class="px-4 py-2">Spiel</th>
            <th class="px-4 py-2">Spielzeit (Minuten)</th>
        </tr>
    </thead>
    <tbody>
        {% for game in games %}
            <tr class="border-t">
                <td class="px-4 py-2">{{ game.name }}</td>
            </tr>
        {% endfor %}
    </tbody>
</table>